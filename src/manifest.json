{
  "author": "LiuRabt",
  "name": "URL to Qrcode - 实时生成当前页面二维码",
  "description": "根据当前前台页面的url地址生成QRcode方便扫码访问",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "网页生成二维码",
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": false
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' https://jic.talkingdata.com; object-src 'self'",
  "permissions": [
    "storage",
    "tabs",
    "contextMenus"
  ]
}