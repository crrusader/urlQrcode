{
  "author": "bhl",
  "name": "OverTime - OverTime",
  "description": "查看加班时长",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon19.png",
      "38": "icons/icon38.png"
    },
    "default_title": "查看加班时长",
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": false
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "css": ["style.css"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "storage",
    "tabs",
    "cookies",
    "*://*/*"
  ]
}